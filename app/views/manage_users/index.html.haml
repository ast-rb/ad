%h1 Listing manage_users

%table.table
  %tr
    %th
      = 'ID'
    %th
      = 'Name'
    %th
      = 'Email'
    %th
      = 'Role'
    %th
    %th
    %th

  - @manage_users.each do |manage_user|
    %tr
      %td
        = manage_user.id
      %td
        = manage_user.username
      %td
        = manage_user.email
      %td
        = manage_user.role.name
      %td
      
        = link_to 'Show', manage_user_path(manage_user)
      %td
      
        = link_to 'Edit', edit_manage_user_path(manage_user)
      %td
        = link_to 'Destroy', manage_user_path(manage_user), :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Manage user', new_manage_user_path
