.span3
  %div{class: "well"}= "#{t('user_bar.entered')} #{current_user.username}" if user_signed_in?

  %div{class: "well", style: "padding: 8px 0;"}
    %ul{class: "nav nav-list"}
      %li{class: 'nav nav-list'}
        %strong
          = t('menu.header')
      %li{class: "divider", style: "padding: 8px 0;"}
      %li
        %a{title: '@title', href: '/'}
          = t('menu.main')
        - if can? :enter, :user_pages
          %li= link_to t('menu.profile'), edit_user_registration_path
          %li= link_to t('menu.my_ads'), ads_path

          %li= link_to t('menu.exit'), destroy_user_session_path, method: :delete
        - if can? :enter, :admin_zone
          %li= link_to t('menu.users_man'), manage_users_path
          %li= link_to t('menu.types_man'), manage_types_path
          %li= link_to t('menu.ads_man'), manage_ads_path
          %li= link_to t('menu.exit'), destroy_user_session_path, method: :delete
        - if can? :enter, :reg_block
          %li= link_to t('menu.sign_up'), new_user_registration_path
          %li= link_to t('menu.sign_in'), new_user_session_path

        %li{class: "divider", style: "padding: 8px 0;"}
          %li= link_to_unless_current t('lang.en'), locale: 'en'
          %li= link_to_unless_current t('lang.ru'), locale: 'ru'


