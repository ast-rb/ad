%p#notice= notice
.row
  .itemad.span9.well
    %div
      %h1= @ad.title
      %p= @ad.body.html_safe

    - for image in @ad.images
      .gal
        %p= image_tag image.photo.url(:mini) if image.photo?
        %p= image.name
    %br
    .clear
    = link_to t('links.back'), ads_path
    |
    = state_edit_ad(@ad)

